{{#section "employment"}}
<hr>
<section id="employment">
  {{#> header-employment }}
    {{> header-icon _title="EMPLOYMENT" _section="employment" _hdricon=(lookup . '_icon') }}
  {{/header-employment}}

  {{#each r.employment.history}}
    {{#> body-employment }}
    <div>
      <h3><em>{{ position }}</em>,
        <strong>
          {{#if url }}
          <a href="{{{ url }}}">{{ employer }}</a>
          {{else}}
          {{ employer }}
          {{/if}}
        </strong>
        </h3>
        <span class="tenure">{{dateRange . 'MMM YYYY'}}</span>
      {{#if keywords}}<span class="keywords">{{#each keywords}}<span class="keyword">{{{ . }}}</span> {{/each}}</span>{{/if}}
      <p>{{{ summary }}}</p>
      {{> highlights }}
    </div>
    {{/body-employment}}
  {{/each}}
</section>
{{/section}}
