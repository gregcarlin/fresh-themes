{{#section 'projects'}}
<hr>
<section id="projects">
  {{#> header-projects }}
    {{> header-icon _title="PROJECTS" _section="projects" _hdricon=(lookup . '_icon') }}
  {{/header-projects}}
  {{#each r.projects }}
    {{#> body-projects }}
    <div>
    <h3>{{#if role}}<em>{{camelCase role }}</em>,{{/if}}
    <strong>
      {{#if url}}
      <a href="{{{ url }}}">{{ title }}</a>
      {{else}}
      {{ title }}
      {{/if}}
    </strong>
    </h3>
    {{#if start}}<span class="tenure">{{dateRange . 'MMM YYYY'}}</span>{{/if}}
    {{{ summary }}}
    {{> highlights }}
    {{#if keywords}}<span class="keywords">{{#each keywords}}<span class="keyword">{{{ . }}}</span> {{/each}}</span>{{/if}}
    </div>
    {{/body-projects }}
  {{/each}}
</section>
{{/section}}
